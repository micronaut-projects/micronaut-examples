{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "prettier"
  ],

  "globals": {
    "EventSource": "readable"
  },

  "plugins": ["html", "jsx-a11y", "prettier", "react"],

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "no-console": "off",
    "react/display-name": "off",
    "react/no-unescaped_entities": "off"
  }
}
